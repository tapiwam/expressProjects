extends layout

block content
  form(method='post' action='contact/send')
    h1 Contact
    .form-group
      label Name
      input.form-control(type='name', name='name', placeholer='Enter Your Name')
    .form-group
      label Email
      input.form-control(type='email', name='email', placeholer='Enter Your Email')
    .form-group
      label Message
      textarea.form-control(name='message', placeholder='Enter a message...')
    button.btn.btn-default(type='submit') Submit
